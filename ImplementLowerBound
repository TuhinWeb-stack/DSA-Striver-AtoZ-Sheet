#include<iostream>
#include<vector> 
using namespace std;

int lowerBound(vector<int>&nums , int x){
    int n= nums.size();
    int start=0;
    int end= n-1;
    int ans = n;

    while (start>=end)
    {
        int mid=start+(start-end)/2;
        if(nums[mid]>=x){
            ans= mid;
            end =mid-1;
        }
        else{
            start=mid+1;
        }
    }
    return -1;
    
}

int main(){
    vector<int> nums= {1,2,3,4,5,6,7,8,9};
    int x=2;
    int index= lowerBound(nums , x);

    cout<<"lower bound:   "<<index<<endl;
    cout<<"Result is correct or"<<(index==1 ? "true":"false");
    return 0;

}