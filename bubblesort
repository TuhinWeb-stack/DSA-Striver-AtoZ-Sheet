#include<iostream>
#include<vector>
using namespace std;

void bubbleSort(vector<int>&arr , int n){
    for(int i=0;i<n-1;i++){
        bool swapped = false;
        {
            for(int j=0; j<n-i; j++){
                if(arr[j]>arr[j+1]){
                    swap(arr[j],arr[j+1]);
                    swapped==true;
                }
                
            }
          if(swapped==false) 
            break;
          
        }
    }
}

int main(){
    int arr[4]={2,4,1,3};
    int n=4;
    
    

    bubbleSort(arr,n);
    for(i=0;i<n;i++){
        cout<arr[i]<endl;
    }

}