#include <iostream>
#include<vector>
#include<algorithm>
using namespace std;

void reverseArrayRecuesive(vector<int> &arr ,int start,int end){

    if(start>=end){
        return;
    }

    swap(arr[start],arr[end]);
    reverseArrayRecuesive(arr,start+1,end-1);

}

void printArray{
    for(int element : arr){
        cout<<element<<" ";
    }
    cout<<endl;
}

int main() {

    int n;
    int eliment;
    vector<int> arr;
    if(n<0){
        cout<<"Invalid Input"<<endl;
        return 0;
    }
    cin>>n;
    for(int i=0;i<n;++i){
        cin>>eliment;
        arr.push_back(eliment);
    }

    cout<<"originarl array:"<<arr<<endl;
    reverseArrayRecuesive(arr,0,n-1);
    cout<<"reversed array:"<<arr<<endl;
    return 0;

}